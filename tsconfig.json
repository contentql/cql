{
  "compilerOptions": {
    "baseUrl": ".",

    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "allowJs": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist", // storing output in dist folder
    "rootDir": "./src", // input for compilation

    "noEmit": false, // do not emit the js files on build
    "emitDeclarationOnly": true, // emit only declarations .d.ts files
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true, // skips the type checking in libraries d.ts files

    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
